<!DOCTYPE html>
<html>
  <head>
    <!-- ——————————————————————————————————————————————————————————————————— META -->
    <meta charset="utf-8">
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Personal Financial Information Visualization Prototypes">
    <meta name="author" content="Benjamin Wiederkehr">
    <!-- ——————————————————————————————————————————————————————————————————— TITLE -->
    <title><%= current_page.data.title || 'Application' %></title>
    <!-- ——————————————————————————————————————————————————————————————————— CSS -->
    <!-- Base stylesheets -->
    <%= stylesheet_link_tag "base", :media => 'all' %>
    <!-- Page specific stylesheets -->
    <%= stylesheet_link_current "main", :media => 'all' %>
    <!-- ——————————————————————————————————————————————————————————————————— SHIM -->
    <!--[if lt IE 9]><script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <!-- ——————————————————————————————————————————————————————————————————— FAVICON -->
    <link rel="shortcut icon" href="assets/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="assets/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="assets/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="assets/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="assets/ico/apple-touch-icon-57-precomposed.png">
    <!-- ——————————————————————————————————————————————————————————————————— FONT -->
    <%= yield_content :head %>
  </head>
  <body class="<%= page_classes %>">
    <div id="app-container">
      <div id="app-header">
        <%= partial "partials/navbar" %>
      </div>
      <div id="app-content">
        <%= yield %>
      </div>
      <div id="app-footer-push"></div>
    </div>
    <div id="app-footer">
      <%= partial "partials/credits" %>
    </div>
    <!-- ——————————————————————————————————————————————————————————————————— JS -->
    <!-- Base scripts -->
    <%= javascript_include_tag "base" %>
    <%= javascript_include_current "main" %>
    <!-- Page specific scripts -->
    <% data.page.scripts.each do |script| %>
    <%= javascript_include_tag script %>
    <% end %>
    <!-- Analytics -->
    <script type="text/javascript">
    if (window.App.config.googleAnalyticsAccount) {
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', window.App.config.googleAnalyticsAccount]);
      _gaq.push(['_trackPageview']);
      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
    }
    </script>
    <!-- Javascript Templates -->
    <%= render_templates_current %>
  </body>
</html>
